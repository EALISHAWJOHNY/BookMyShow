-- Create MovieCategory table
CREATE TABLE MovieCategory (
    Id INT PRIMARY KEY,
    Name NVARCHAR(50) NOT NULL
);

-- Create MovieGenre table
CREATE TABLE MovieGenre (
    Id INT PRIMARY KEY,
    Name NVARCHAR(50) NOT NULL
);

-- Create Movie table with foreign keys
CREATE TABLE Movie (
    Id INT PRIMARY KEY,
    Name NVARCHAR(255) NOT NULL,
    ImbdRating DECIMAL(3, 1) NOT NULL,
    CategoryId INT NOT NULL,
    GenreId INT NOT NULL,
    ReleaseDate DATETIME NOT NULL,
    ActorName NVARCHAR(255),
    ActressName NVARCHAR(255),
    ThemePhotoPath NVARCHAR(255),
    FOREIGN KEY (CategoryId) REFERENCES MovieCategory(Id) ON UPDATE CASCADE ON DELETE CASCADE,
    FOREIGN KEY (GenreId) REFERENCES MovieGenre(Id) ON UPDATE CASCADE ON DELETE CASCADE
);